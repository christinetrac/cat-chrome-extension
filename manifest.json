{
    "name": "Bernie Sanders to Grandpa",
    "version": "0.1",
    "description": "Replaces 'Bernie Sanders' with 'Grandpa' :)",
    "manifest_version": 2,
    "permissions": ["activeTab", "declarativeContent"],
    "icons": {
        "16": "images/bern_16.png",
        "32": "images/bern_32.png",
        "48": "images/bern_48.png"
    },
    "browser_action": {
        "default_icon": {
            "16": "images/bern_16.png",
            "32": "images/bern_32.png",
            "48": "images/bern_48.png"
        }
    },
    "content_scripts":
    [
      {
        "matches": ["*://*/*"],
        "js": ["main.js"],
        "run_at": "document_end"
      }
    ]
}
